{% extends 'layouts/page.njk' %}

{% block content %}
  {{ appHeading({
    text: heading
  }) }}

  {% for session in sessions %}
    <div class="govuk-summary-card">
      <div class="govuk-summary-card__title-wrapper">
        <h2 class="govuk-summary-card__title">
          {{ session.user }} ({{ session.start_time }} to {{ session.end_time }})
        </h2>
      </div>
      <div class="govuk-summary-card__content">
        <dl class="govuk-summary-list">
          <div class="govuk-summary-list__row">
            <dt class="govuk-summary-list__key">
              {{ appTags('# threads: ' + session.numberOfThreads, session.overallModelUsage) }}
            </dt>
            <dd class="govuk-summary-list__actions">
              <a class="govuk-link" href="/projects/{{session.projectId}}/sessions/{{session.sessionId}}">View threads<span class="govuk-visually-hidden"> View hreads</span></a>
            </dd>
          </div>
        </dl>
      </div>
    </div>
  {% endfor %}

{% endblock %}
